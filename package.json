{
  "name": "@wheeldrop/logbook",
  "version": "0.2.0",
  "description": "The flight recorder for your AI agents — search conversation logs across Claude Code, Codex, and Gemini CLI",
  "type": "module",
  "bin": {
    "logbook": "build/index.js"
  },
  "mcpName": "io.github.wheeldrop/logbook",
  "scripts": {
    "build": "rm -rf build && tsc && chmod 755 build/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mutation": "stryker run",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run typecheck && npm run test:coverage",
    "inspect": "npx @modelcontextprotocol/inspector build/index.js",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    ".github/workflows/*.yml": [
      "actionlint",
      "bash -c 'grep -nE \"^\\s+uses:\" \"$@\" | grep -Ev \"@[0-9a-f]{40}\" && echo \"ERROR: unpinned action(s) — pin to a full SHA\" && exit 1 || exit 0' --"
    ]
  },
  "files": [
    "build",
    ".claude-plugin",
    ".mcp.json",
    "agents",
    "skills",
    "gemini-extension.json",
    "server.json"
  ],
  "keywords": [
    "mcp",
    "mcp-server",
    "wheeldrop",
    "logbook",
    "flight-recorder",
    "conversation-search",
    "claude-code",
    "codex",
    "gemini-cli",
    "ai-coding-agent"
  ],
  "author": {
    "name": "Crash United, LLC",
    "email": "info@crashunited.com",
    "url": "https://github.com/crashunited"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wheeldrop/logbook.git"
  },
  "homepage": "https://github.com/wheeldrop/logbook#readme",
  "bugs": {
    "url": "https://github.com/wheeldrop/logbook/issues"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 20"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/crashunited"
  },
  "directories": {
    "lib": "./build",
    "test": "./src"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "minisearch": "^7.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/vitest-runner": "^9.5.1",
    "@types/node": "^25.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
